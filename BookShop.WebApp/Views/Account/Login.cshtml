@{
    ViewData["Title"] = "Login";
}
@model ViewModel

<body id="loginpage">

    <form asp-controller="Account" asp-action="Login" method="post" class="input-form">
        <h3 class="form-header">Login:</h3>
        <div class="input-group-text">
            @if (Model is not null && !string.IsNullOrWhiteSpace(Model.ErrorView.AdditionalMessage))
            {
                <p class="text-danger form-center-text">@Model!.ErrorView.AdditionalMessage</p>
            }
            @if(Model is not null && !string.IsNullOrWhiteSpace(Model.AccountView.RegistrationMessage))
            {
                <p class="form-center-text">@Model.AccountView.RegistrationMessage</p>
            }
            <input class="form-control" id="email" name="email" type="email" placeholder="Enter your email for login" />
            <input class="form-control" id="password" name="password" typeof="password" placeholder="Enter your password" />

            <button class="btn btn-primary my-btn form-control" type="submit">Login</button>
            <label class="button-top-label" for="register">Do not have an account?</label>
            <a id="register" name="register" class="btn btn-primary my-btn form-control" asp-controller="Account" asp-action="RegisterPage" value="Register">Register</a>
        </div>
    </form>

</body>